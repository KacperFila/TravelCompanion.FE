# Stage 1: Build Angular app
FROM node:20-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files first (for caching)
COPY package*.json ./

# Install Angular CLI and TypeScript globally
RUN npm install -g @angular/cli ts-node typescript

# Install dependencies
RUN npm install

# Copy all source code
COPY . .

# Accept a build arg (optional) or fallback to environment variable
ARG CONFIGURATION=production
ENV CONFIGURATION=${CONFIGURATION:-production}

# Build Angular app using the selected configuration
RUN echo "Building Angular app with configuration: $CONFIGURATION" \
    && npm run build -- --configuration $CONFIGURATION

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Remove default Nginx static content
RUN rm -rf /usr/share/nginx/html/*

# Copy built Angular app from builder
COPY --from=builder /app/dist/ui/ /usr/share/nginx/html/

# Copy custom Nginx config for SPA routing (optional)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose HTTP port
EXPOSE 80

# Start Nginx in foreground
CMD ["nginx", "-g", "daemon off;"]
